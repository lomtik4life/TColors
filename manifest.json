{
  "manifest_version": 2,
  "name": "TColors",
  "version": "0.34",
  "description": "Tcolor - show all the colors of the most popular on the site.",
  "icons": {"128" : "icon/icon128.png"},

  "browser_action": { // Элементы браузера
  	"default_title": "button", // Название кнопки
  	"default_icon": "icon/icon128.png", // Иконка для кнопки
  	"default_popup": "index.html" // Всплывающее окно
  },

  "background": {
    "page": "index.html",
    "persistent": true
  },

  "permissions": ["tabs", "pageCapture" , "<all_urls>"]
}
